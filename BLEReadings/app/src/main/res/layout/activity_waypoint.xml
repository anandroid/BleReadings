<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/current_way_point_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text= "Move to WayPoint 1"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"/>

    <Button
        android:id="@+id/current_way_point_status_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" I have Moved "
        android:layout_below="@+id/current_way_point_status"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_way_point_status_button"
        android:layout_marginTop="40dp"/>

</RelativeLayout>